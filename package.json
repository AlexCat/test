{
  "name": "@workspace/root",
  "private": true,
  "devDependencies": {
    "craco": "^0.0.3",
    "lerna": "^4.0.0"
  },
  "scripts": {
    "start": "lerna exec --scope @workspace/app -- yarn start",
    "c-start": "lerna exec --scope @workspace/components -- yarn start",
    "app-build": "lerna exec --scope @workspace/app -- yarn build",
    "test": "lerna run test --since",
    "new-version": "lerna version --conventional-commits --yes",
    "diff": "lerna diff",


    "bootstrap": "lerna run --scope @workspace/app --scope @workspace/app yarn"
  },
  "workspaces": {
    "packages": [
      "packages/**"
    ]
  }
}
